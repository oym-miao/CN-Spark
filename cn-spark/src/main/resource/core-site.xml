<!-- Put site-specific property overrides in this file. -->

<configuration>




	<!--
	 <property>
            <name>fs.defaultFS</name>
            <value>hdfs://192.168.91.101:8082</value>
        </property>
-->

    <property>
            <name>fs.defaultFS</name>
            <value>hdfs://ns</value>
        </property>

	<property>
		<name>fs.default.name</name>
		<value>hdfs://oym2.com:8082</value>
	</property>


        <!-- 临时文件的目录 注意: 需要需创建 -->
        <property>
            <name>hadoop.tmp.dir</name>
            <value>/opt/oym/modules/hadoop-2.5.0/data/tmp</value>
        </property>

        <!--zookeeper机器上的节点以及端口号-->
         <property>
            <name>ha.zookeeper.quorum</name>
            <value>oym.com:2181,oym2.com:2181,oym3.com:2181</value>
        </property>

	<!--namenode启动不起来配置 -->
	<property>
  		<name>ipc.client.connect.max.retries</name>
  		<value>100</value>
  		<description>Indicates the number of retries a client will make to establish a server connection.
  		</description>
 	</property>
 
	<property>
  		<name>ipc.client.connect.retry.interval</name>
  		<value>10000</value>
  		<description>Indicates the number of milliseconds a client will wait for
  		before retrying to establish a server connection.
  		</description>
 	</property>




